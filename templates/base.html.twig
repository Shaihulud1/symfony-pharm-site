<html lang="ru">
    <head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>{% block title %}Landing page{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('dist/css/index.css') }}" />
        {% endblock %}
        <script src="https://api-maps.yandex.ru/2.1/?apikey=d5eb9800-404f-4322-906d-ebe86a51b650&lang=ru_RU" type="text/javascript"></script>
    </head>
    <body>
        <div class="toolbar toolbar--mobile">
			<div class="toolbar__top">
				<a href="#" class="toolbar__logo">
					<img src="{{ asset('img/logo.png') }}" alt="Вита" />
				</a>
				<button class="hamburger hamburger--spring" type="button">
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
				</button>
			</div>
			<div class="toolbar__mobile">
				<div class="toolbar__bottom">
					<a href="#about" class="toolbar__link">О компании</a>
					<a href="#map" class="toolbar__link">Аптека на карте</a>
				</div>
			</div>
			<a href="tel:+78007550003"><span class="icon-phone"></span> {{landingData.getPhone}}</a>
		</div>
		<header class="toolbar">
			<a href="#" class="toolbar__logo">
				<img src="{{ asset('img/logo.png') }}" alt="Вита" />
			</a>
			<menu class="toolbar__menu">
				<a href="#about" class="toolbar__link">О компании</a>
				<a href="#map" class="toolbar__link">Аптека на карте</a>
				<a href="tel:+78007550003"><span class="icon-phone"></span> {{landingData.getPhone}}</a>
			</menu>
		</header>
        {% block body %}{% endblock %}
		{% if landingData.getRequisiteRight or landingData.getRequisiteLeft %}
        <footer class="footer">
			<div class="footer__top">
				<button class="footer__button">Реквизиты</button>
			</div>
			<div class="footer__hidden">
				<div class="footer__info">
					<div class="footer__column">
						{{landingData.getRequisiteLeft|raw}}
					</div>
					<div class="footer__column">
						{{landingData.getRequisiteRight|raw}}
					</div>
				</div>
			</div>
			<p class="footer__copyright">Интернет-аптека Vita © 2019</p>
		</footer>
		{% endif %}
        {% block javascripts %}
            <script src="{{ asset('dist/js/libs.js') }}"></script>
            <script src="{{ asset('dist/js/index.js') }}"></script>
		    <!-- Yandex.Metrika counter -->
            <script type="text/javascript" >
            (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
            m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
            (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

            ym(53857912, "init", {
                    clickmap:true,
                    trackLinks:true,
                    accurateTrackBounce:true
            });
            </script>
            <noscript><div><img src="https://mc.yandex.ru/watch/53857912" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
		    <!-- /Yandex.Metrika counter -->
        {% endblock %}
	</body>
</html>
