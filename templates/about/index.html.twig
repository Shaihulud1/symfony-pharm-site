{% extends 'base.admin.html.twig' %}

{% block title %}About index{% endblock %}

{% block body %}
    <h1>Список описаний</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Текст</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td>{{ about.id }}</td>
                <td>{{ about.name }}</td>
                <td>{{ about.content }}</td>
                <td>
                    {{ include('about/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('about_new') }}" class="btn btn-primary">Добавить</a>
{% endblock %}
