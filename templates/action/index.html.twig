{% extends 'base.admin.html.twig' %}

{% block title %}Action index{% endblock %}

{% block body %}
    <h1>Список акций</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Картинка</th>
                <th>Логотип</th>
                <th>Текст</th>
                <!-- <th>Цвет текста</th> -->
                <th>Цвет плашки</th>
                <th>Текст плашки</th>
                <th>Url</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for action in actions %}
            <tr>
                <td>{{ action.id }}</td>
                <td>{{ action.name }}</td>
                <td><img src="{{ asset(action.getActionPic) }}" class="admin-img-preview" alt="Пусто"></td>
                <td><img src="{{ asset(action.getLogoPic) }}" class="admin-img-preview" alt="Пусто"></td>
                <td>{{ action.text }}</td>
                <!-- <td>{{ action.textColor }}</td> -->
                <td>{{ action.labelColor }}</td>
                <td>{{ action.labelText }}</td>
                <td>{{ action.url }}</td>
                <td>
                    {{ include('action/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('action_new') }}" class="btn btn-primary">Добавить</a>
{% endblock %}
