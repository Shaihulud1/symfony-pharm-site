{% extends 'base.admin.html.twig' %}

{% block title %}AboutLogo index{% endblock %}

{% block body %}
    <h1>Список логотипов описаний</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Сортировка</th>
                <th>Название</th>
                <th>Файл логотипа</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for about_logo in about_logos %}
            <tr>
                <td>{{ about_logo.id }}</td>
                <td>{{ about_logo.sort }}</td>
                <td>{{ about_logo.name }}</td>
                <td>{{ about_logo.logoPic }}</td>
                <td>
                    {{ include('about_logo/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Пусто</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('about_logo_new') }}" class="btn btn-primary">Добавить</a>
{% endblock %}
