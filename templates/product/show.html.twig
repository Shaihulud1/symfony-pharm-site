{% extends 'base.admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Product_pic</th>
                <td>{{ product.productPic }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}" class="btn btn-primary">К списку</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-info">Изменить</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
