<div class="vizew-login-area section-padding-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
            {{ form_start(form) }}
            <div class="form-group">
                <label>Название</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                <label>Сортировка</label>
                {{ form_widget(form.sort, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.sort) }}
            </div>
            <div class="form-group">
                <label>Цена</label>
                {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.price) }}
            </div>
            <div class="form-group">
                <label>Картинка</label>
                {{ form_widget(form.product_pic_file, { 'attr': {'class': 'form-control-file'} }) }}
                {{ form_errors(form.product_pic_file) }}
                {% if product.getProductPic %}
                    <a href="{{ asset(product.getProductPic) }}" target="_blank">Текущая картинка</a>
                {% endif %}
            </div>
            <div class="form-group">
                <label>URL</label>
                {{ form_widget(form.url, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.url) }}
            </div>
                <button class="btn btn-primary">Подтвердить</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
