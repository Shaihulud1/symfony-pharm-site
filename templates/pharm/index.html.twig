{% extends 'base.admin.html.twig' %}

{% block title %}Pharm index{% endblock %}

{% block body %}
    <h1>Список аптек</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Сортировка</th>
                <th>Название</th>
                <th>Картинка</th>
                <th>Координаты</th>
                <th>Тип</th>
                <th>Адрес</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for pharm in pharms %}
            <tr>
                <td>{{ pharm.id }}</td>
                <td>{{ pharm.sort }}</td>
                <td>{{ pharm.name }}</td>
                <td><img src="{{ asset(pharm.getPharmPic) }}" class="admin-img-preview" alt="Пусто"></td>
                <td>{{ pharm.coords }}</td>
                <td>{{ pharm.type }}</td>
                <td>{{ pharm.address }}</td>
                <td>
                    {{ include('pharm/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pharm_new') }}" class="btn btn-primary">Добавить</a>
{% endblock %}
