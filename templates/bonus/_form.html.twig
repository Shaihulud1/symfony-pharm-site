<div class="vizew-login-area section-padding-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>Название</label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    <label>Текст</label>
                    {{ form_widget(form.text, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.text) }}
                </div>
                <div class="form-group">
                    <label>Текст плашки</label>
                    {{ form_widget(form.label_text, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.label_text) }}
                </div>
                <div class="form-group">
                    <label>Цвет плашки</label>
                    {{ form_widget(form.label_color, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.label_color) }}
                </div>
                <div class="form-group">
                    <label>Цвет верхнего текста</label>
                    {{ form_widget(form.title_color, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.title_color) }}
                </div>
                <div class="form-group">
                    <label>Url</label>
                    {{ form_widget(form.url, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.url) }}
                </div>
                <div class="form-group">
                    <label>Фоновая картинка</label>
                    {{ form_widget(form.bonus_pic_file, { 'attr': {'class': 'form-control-file'} }) }}
                    {{ form_errors(form.bonus_pic_file) }}
                    {% if bonus.getBonusPic %}
                        <a href="{{ asset(bonus.getBonusPic) }}" target="_blank">Текущая картинка</a>
                    {% endif %}
                </div>
                <button class="btn btn-primary">Подтвердить</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
