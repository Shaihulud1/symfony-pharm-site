{% extends 'base.admin.html.twig' %}

{% block title %}Bonus index{% endblock %}

{% block body %}
    <h1>Список бонусных карт</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Текст</th>
                <th>Текст плашки</th>
                <th>Цвет плашки</th>
                <th>Цвет текста</th>
                <th>Url</th>
                <th>Картинка</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for bonus in bonuses %}
            <tr>
                <td>{{ bonus.id }}</td>
                <td>{{ bonus.name }}</td>
                <td>{{ bonus.text }}</td>
                <td>{{ bonus.labelText }}</td>
                <td>{{ bonus.labelColor }}</td>
                <td>{{ bonus.titleColor }}</td>
                <td>{{ bonus.url }}</td>
                <td><img src="{{ asset(bonus.getBonusPic) }}" class="admin-img-preview" alt="Пусто"></td>
                <td>
                    {{ include('bonus/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bonus_new') }}" class="btn btn-primary">Добавить</a>
{% endblock %}
